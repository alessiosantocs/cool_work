<div id="topbar">
  <div id="action">
    <h1 id="username"><%= @user.username %></h1>
    <h2><a href="#" class="subtab">My Ideal Partner</a></h2>
    <h2>Member Info</h2>
    <ul id="actionlinks">
      <li class="mail"><a href="#">Send a Message</a></li>
      <li>Member Since: <%= date_string(@user.created_on) %></li>
      <li><%= @user.location %></li>
    </ul>
    <div id="userpic">
      <%= thumbnail(@user)%>
    </div>
    <div id="userdesc">
      <p><%= @user.your_desc || "No description yet!" %></p>
    </div>
    <div id="match_desc" style="display:none">
      <%= @user.match_desc || "No description yet!" %>
    </div>
  </div>

  <div class="flyerads">
    <h4>Flyer Ads</h4>
    <%= inhouse_ads("120x120", "people", 3) %>
  </div>
</div><!-- topbar -->

<div id="primaryContent">  
  <h2><a href="#" class="subtab">Testimonials</a></h2>
  <h2><a href="#">Recent Comments</a></h2>
  <div class="scrollable" id="comments">
    <%= comments(@user) %>
  </div><!-- comments -->
  <div class="scrollable" id="testimonials" style="display:none">
    <%= testimonials(@user) %>
  </div>

  <h1>Recent Party Pics</h1>
  <div id="partypics">
    <p class="prev"><a href="#">Previous Pic</a></p>
    <p class="next"><a href="#">Next Pic</a></p>
    <ul>
      <li><a href="#"><img src="/images/na100x100.jpg" width="100" height="100" alt="party thumbnail" /></a>
      <p>Nov 18 2006</p></li>
      <li><a href="#"><img src="/images/na100x100.jpg" width="100" height="100" alt="party thumbnail" /></a>
      <p>Nov 18 2006</p></li>
      <li><a href="#"><img src="/images/na100x100.jpg" width="100" height="100" alt="party thumbnail" /></a>
      <p>Nov 18 2006</p></li>
    </ul>
  </div>

  <div id="faves">
    <div class="favelist">
      <h1>Fave Parties</h1>
      <div id="fave_parties">
        <%= faves(@user, "Party") %>
      </div>
      <p class="more"><a href="#">More?</a></p>
    </div>
  
    <div class="favelist">
      <h1>Fave Venues</h1>
      <div id="fave_venues">
        <%= faves(@user, "Venue") %>
      </div>
      <p class="more"><a href="#">More?</a></p>
    </div>
  </div>
  <br clear="all">
  <div id="turns">
    <div class="favelist">
      <h1>Turn ons</h1>
      <%= phrases(@user, "TurnOn") %>
    </div>
    <div class="favelist">
      <h1>Turn offs</h1>
      <%= phrases(@user, "TurnOff") %>
    </div>
  </div>
</div><!-- primaryContent -->


<div id="secondaryContent">

  <div id="googads">
    <%= render_ad("120x600_ros") %>
  </div>
  
  <div class="advertisement">
    <h4>Advertisement</h4>
    <%= inhouse_ads('336x280', "ros") -%>
    <p>To advertise, call Chris at <strong>347-558-4020</strong> or email <a href="mailto:ccampbell@firstclandestine.com">ccampbell@firstclandestine.com</a></p>
    <div id="friends">
      <h1>Friends</h1>
      <%= friends(@user) %>
    </div>
    <div id="tags">
      <h1>Interests</h1>
      <div id="interests">
        <%= phrases(@user, "Interest") %>
      </div>
    </div>
  </div>
</div><!-- secondaryContent -->