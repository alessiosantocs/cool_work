<% @msg = Msg.blank %>
<%= form_tag(nil, { :method => 'post', :id => "create_form", :autocomplete => "off", :onsubmit => "submitNew(); return false;" }) -%>
	    <p>Receiver:<br /> 
  	  	<%= text_field 'msg', 'receiver_id', { :maxlength => 11, :size => 16 } -%>
  </p>
    <p>Message:<br /> 
  	  	<%= text_area 'msg', 'message', { :rows => 20, :cols => 60 } -%>
  </p>
    <p>Deleted by sender:<br /> 
  	  	<%= check_box 'msg', 'deleted_by_sender', {} -%>
  </p>
    <p>Subject:<br /> 
  	  	<%= text_field 'msg', 'subject', { :maxlength => 128, :size => 138 } -%>
  </p>
    <p>Deleted by receiver:<br /> 
  	  	<%= check_box 'msg', 'deleted_by_receiver', {} -%>
  </p>
    <p>Read timestamp:<br /> 
  	  	<%= text_field 'msg', 'read_timestamp', { :maxlength => 12, :size => 24 } -%>
  </p>
    <p>Sender:<br /> 
  	  	<%= text_field 'msg', 'sender_id', { :maxlength => 11, :size => 16 } -%>
  </p>
    <p>Parent:<br /> 
  	  	<%= text_field 'msg', 'parent_id', { :maxlength => 11, :size => 16 } -%>
  </p>
  	<div class="button-bar"><%= submit_tag "Create" -%></div>
<%= end_form_tag -%>