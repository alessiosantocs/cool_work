<%= javascript_include_tag "inform.js" %>
<%= include_tiny_mce_if_needed %>
<% form_for :email_tracker, :url => { :action => "send_mail_to_all_person_of_company" } do |f| %>
    <%= f.hidden_field :company_id,:value=>params[:id]%>
    <p>    <%= f.label :subject %><br />
            <%= f.text_field :subject %>
    </p>
    <%= collection_select(:email_tracker, :id, @all_template,:id,:template_name,{:prompt => "-Select a Template"} ,{:onchange=>"check_alert(this.value);"}) %>
    <p>
             <%= f.label :message %><br />
            <%= f.text_area :message,:class => "mceEditor" %>

     </p>

    <p>
        <%= f.label :return_email %><br />
        <%= f.text_field :return_email %>
    </p>
        
    <button type="submit" class="positive" id="send_mail_Submit">
        <img src="/images/icons/tick.png" alt=""/>Save
    </button>
<button type="button" class="positive" id="send_mail_Submit" onclick="preview_email();">
        <img src="/images/icons/tick.png" alt=""/>Preview
    </button>
<% end %>
