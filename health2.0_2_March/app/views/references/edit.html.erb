<h1>Editing reference</h1>

<% form_for(@reference) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :url %><br />
    <%= f.text_area :url %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label :dateEntered %><br />
    <%= f.date_select :dateEntered %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @reference %> |
<%= link_to 'Back', references_path %>