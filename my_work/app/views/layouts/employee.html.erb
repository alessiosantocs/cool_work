    <% body_tag( :style=>"font-family: Verdana,Arial,Helvetica,sans-serif;font-size: 11px;margin-left: auto;") do %>
    <div id="logo">
      <table cellspacing=0 style="margin: auto; ">
        <tr>
          <td><%= image_tag('banner_left.jpg') %></td>
          <td><%= link_to image_tag('myfreshshirt.jpg', :style => "margin-top: 40px;"), "/"  %></td>
          <td><%= image_tag('banner_right.jpg') %></td>
        </tr>
      </table>
    </div>
    
    <div id="menu">
        <div id="settings-menu">
            <span><strong><%= current_user.email %></strong></span>
            <%= '| <span>' + link_to_unless_current_heirarchy("Promotions", "/admin/promotions")  + '</span>' if current_user.has_role?('content')%>
            <%= '| <span>' + link_to_unless_current_heirarchy("Content", "/admin/content")  + '</span>' if current_user.has_role?('content')%>
            | <span><%= link_to_unless_current_heirarchy "Help", faq_url %></span>
            | <span><%= link_to "Sign Out", logout_url %></span>
