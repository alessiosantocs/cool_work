<% unless @promotion_zips.blank?%>
    <% @promotion_zips.each do |promotion_zip| %>
      <% form_for promotion_zip, :url => admin_promotion_promotion_zip_path(params[:promotion_id], promotion_zip),:html => {:method => 'put'} do |f| %>
      <tr class="<%= cycle('light-blue', 'light-green', :name => "order_class") %>">
          <td align="center"><%= f.select :serviced_zip_id, ServicedZip.find(:all, :conditions => {:active => true}, :order => ["zip"]).collect{|s| [s.zip, s.id]}, {}, { :style => "width:140px;"} %></td>
          <td align="center"><%= f.submit "Update", :class => 'button green' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '&nbsp;', admin_promotion_promotion_zip_path(params[:promotion_id], promotion_zip.id), :confirm => 'Are you sure?', :method => :delete, :class => 'action delete' if logged_in? && current_user.has_role?('content') %></td>
      </tr>
      <% end %>
    <% end %>
<% end %>
