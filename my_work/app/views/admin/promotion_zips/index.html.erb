<div class="view-menu">
	<span><strong>Promotion Zips</strong></span>
<span style="float:right;"><%= link_to_lightbox 'New', new_admin_promotion_promotion_zip_path(params[:promotion_id]), :class => 'action new' if logged_in? && current_user.has_role?('content') %></span>
