<ul class="panes">
    <li class="pane-selected">
		<h1>New Notification Template</h1>
		
		<%= error_messages_for :notification_template %>
		
		<% form_for :notification_template, :url => admin_notification_templates_path(@notification_template) do |f| %>
		  <p>
		    <b>Name</b><br />
		    <%= f.text_field :name %>
		  </p>
		
		  <p>
		    <b>Mail body</b><br />
		    <%= f.text_area :mail_body, :cols => 100 %>
		  </p>
		
		  <p>
		    <b>Sms body</b><br />
		    <%= f.text_area :sms_body, :cols => 100 %>
		  </p>
		
		  <p>
		    <%= f.submit "Create" %>
		  </p>
		<% end %>
		
		<%= link_to 'Back', admin_notification_templates_path %>
    </li>
