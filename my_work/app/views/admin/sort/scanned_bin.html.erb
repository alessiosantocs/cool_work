<%= render :partial => '/admin/account_search' %>

<div id="bin_information">
  <h2> Bin Information </h2>
  tracking number: <%= @bin.tracking_number %> <br/>
  location: <%= @bin.position.name %> <br/>
  <br/>
</div>
<div id="bin_contents">
  <h2> Contents </h2>
<table>
<tr>
  <th>tracking number</th><th>status</th><th>type</th><th>service</th><th>color</th><th>brand</th><th>size</th>
</tr>
  <% @bin.contents.each do |item| %>
<tr>
	<td><%= item.tracking_number %></td>
	<td><%= item.status %></td>
	<td><%= item.item_type.name %></td>
	<td><%= item.service.name %></td>
	<td><%= item.color %></td>
	<td><%= item.brand %></td>
	<td><%= item.size %></td>
</tr>
  <% end %>
</table>
<br/>
</div>

<div id="bin_order_part_information">
  <h2> Order Part Information </h2>
  <% if @bin.order_part %>
  number scanned: <%= @bin.order_part.number_scanned_at(@area) %> / <%= @bin.order_part.size %><br/>
  <% end %>

</div>

<%= render :partial => '/admin/sort/scan_item', :area => @area, :context => @bin, :notes => "Scan bin again to close" %>